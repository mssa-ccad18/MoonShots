@page
@model AmazingCalcRazorPage.Pages.HomePageModel
@{
    ViewData["Title"] = "Home Page";
}

<h2>Home Page</h2>

@if (!string.IsNullOrEmpty(Model.LoggedInUser))
{
    <div class="alert alert-success">
        Welcome, <strong>@Model.LoggedInUser</strong>!
    </div>

    <form method="post">
        <button type="submit" name="action" value="logout" class="btn btn-danger">Logout</button>
    </form>
}
else
{
    <div class="alert alert-warning">
        You are not logged in. <a asp-page="/Index">Go to login</a>
    </div>
}
