@page
@model AmazingCalcRazorPage.Pages.UserProfilePageModel
@{
    ViewData["Title"] = "User Profile";
}

<h2>User Profile</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

@if (Model.UserProfile != null)
{
    <form method="post">
        <div class="form-group">
            <label>First Name</label>
            <input asp-for="UserProfile.FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input asp-for="UserProfile.LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Date of Birth</label>
            <input asp-for="UserProfile.DateOfBirth" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label>Height (in inches)</label>
            <input asp-for="UserProfile.HeightInInches" class="form-control" />
        </div>
        <div class="form-group">
            <label>Weight (in pounds)</label>
            <input asp-for="UserProfile.WeightInPounds" class="form-control" />
        </div>
        <div class="form-group">
            <label>Activity Level</label>
            <select asp-for="UserProfile.ActivityLevel" class="form-control">
                <option value="1">Low</option>
                <option value="2">Moderate</option>
                <option value="3">High</option>
            </select>
        </div>
        <div class="form-group">
            <label>Goal Type</label>
            <input asp-for="UserProfile.GoalType" class="form-control" />
        </div>
        <div class="form-group">
            <label>Goal Target Date</label>
            <input asp-for="UserProfile.GoalTargetDate" type="date" class="form-control" />
        </div>

        <div class="form-check">
            <input asp-for="UserProfile.IsVegan" class="form-check-input" />
            <label class="form-check-label">Vegan</label>
        </div>
        <div class="form-check">
            <input asp-for="UserProfile.IsVegetarian" class="form-check-input" />
            <label class="form-check-label">Vegetarian</label>
        </div>
        <div class="form-check">
            <input asp-for="UserProfile.IsGlutenFree" class="form-check-input" />
            <label class="form-check-label">Gluten-Free</label>
        </div>
        <div class="form-check">
            <input asp-for="UserProfile.IsDairyFree" class="form-check-input" />
            <label class="form-check-label">Dairy-Free</label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Profile</button>
    </form>
}
else
{
    <div class="alert alert-warning">
        You must be logged in to view this page. <a asp-page="/Login">Login</a>
    </div>
}