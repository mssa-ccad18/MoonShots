@page
@model AmazingCalcRazorPage.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-warning">@Model.Message</div>
}

<form method="post">
    <div class="form-group">
        <label>Username</label>
        <input asp-for="Credentials.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Credentials.Password" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Login</button>
</form>

<p class="mt-3">
    Don't have an account? <a asp-page="/Register">Register here</a>
</p>
